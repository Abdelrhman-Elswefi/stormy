<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#FFB200"
    android:paddingLeft="64dp"
    android:paddingStart="64dp"
    android:paddingEnd="32dp"
    android:paddingRight="32dp">

    <ImageView
        android:id="@+id/tempContainerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_temperature"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/dayIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tempContainerImage"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloudy_night"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/dayLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dayIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="wednesday"
        android:layout_marginLeft="8dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/dayMaxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/tempContainerImage"
        app:layout_constraintEnd_toEndOf="@+id/tempContainerImage"
        app:layout_constraintStart_toStartOf="@+id/tempContainerImage"
        app:layout_constraintTop_toTopOf="@+id/tempContainerImage"
        tools:text="100"
        android:textColor="#f25019"/>
</android.support.constraint.ConstraintLayout>